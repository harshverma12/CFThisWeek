{
  "browser_action": {
    "default_icon": "icon.png",
    "default_popup": "popup.html"
    },
  "background": { "scripts": ["background.js"] },
  "content_scripts": [
    {
      "js": ["content.js"],
      "matches": ["http://*/*", "https://*/*"]
    }
  ],
  "permissions": [
    "storage",
    "notifications",
    "alarms"
  ]
}